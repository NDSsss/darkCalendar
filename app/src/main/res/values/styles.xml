<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CaldroidDefaultDark" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/CaldroidDefaultDarkCalendarViewLayout</item>
        <item name="styleCaldroidMonthName">@style/CaldroidDefaultDarkMonthName</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidDefaultDarkCell</item>
        <item name="styleCaldroidGridView">@style/CaldroidDefaultDarkGridView</item>
        <item name="styleCaldroidWeekdayView">@style/CaldroidWeekDayViewBlack</item>
        <item name="styleCaldroidRightArrow">@style/CaldroidRightBlackArrow</item>
        <item name="styleCaldroidLeftArrow">@style/CaldroidLeftBlackArrow</item>
    </style>

    <style name="CaldroidLeftBlackArrow">
        <item name="android:background">@drawable/ic_arrow_left</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">50dp</item>
    </style>
    <style name="CaldroidRightBlackArrow">
        <item name="android:background">@drawable/ic_arrow_right</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">50dp</item>
    </style>
    <style name="CaldroidDefaultDarkCalendarViewLayout">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="CaldroidWeekDayViewBlack" parent="CaldroidDefaultWeekday">
        <item name="android:background">@drawable/week_background</item>
        <item name="android:color">@color/caldroid_white</item>
    </style>

    <style name="CaldroidDefaultDarkMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@color/caldroid_white</item>
    </style>

    <style name="CaldroidDefaultDarkGridView" parent="CaldroidDefaultGridView">
        <item name="android:background">@color/caldroid_black</item>
    </style>

    <style name="CaldroidDefaultDarkCell" parent="CaldroidDefaultCell">
        <item name="android:textColor">@color/caldroid_white</item>
        <item name="android:background">@color/caldroid_black</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="CaldroidDefaultDarkNormalCell" parent="CaldroidDefaultDarkCell">
        <item name="android:background">@color/caldroid_black</item>
    </style>

    <style name="CaldroidDefaultDarkSquareCell" parent="CaldroidDefaultDarkCell" >
        <item name="android:textColor">@color/caldroid_white</item>
        <item name="android:background">@color/caldroid_black</item>
    </style>

</resources>
